<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lemon.account.mapper.AccountMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lemon.account.domain.Account">
        <id column="account_id" property="accountId"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="parent_id" property="parentId"/>
        <result column="ancestors" property="ancestors"/>
        <result column="account_name" property="accountName"/>
        <result column="account_password" property="accountPassword"/>
        <result column="account_key_iv" property="accountKeyIv"/>
        <result column="account_info" property="accountInfo"/>
        <result column="account_domain" property="accountDomain"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        create_by,
        create_time,
        update_by,
        update_time,
        account_id, parent_id, ancestors, account_name, account_password, account_key_iv, account_info, account_domain, del_flag
    </sql>

    <delete id="deleteByIds" parameterType="list">
        delete from lam_account where account_id
        <if test="ids != null and ids.size() > 0">
            <foreach collection="ids" item="accountId" open="in(" separator="," close=")">
                #{accountId}
            </foreach>
        </if>
        <if test="ids == null or ids.size() == 0">
            =-1
        </if>
    </delete>

</mapper>
